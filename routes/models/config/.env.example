# Ambiente
NODE_ENV=development
PORT=3000

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://usuario:senha@localhost:5432/monetasis
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monetasis
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# JWT Secrets
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_256_bits
JWT_REFRESH_SECRET=seu_refresh_secret_super_seguro_aqui_256_bits

# Google OAuth
GOOGLE_CLIENT_ID=seu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=seu_google_client_secret_aqui
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# OpenAI (opcional - para IA financeira)
OPENAI_API_KEY=sua_openai_api_key_aqui

# SendGrid (opcional - para emails)
SENDGRID_API_KEY=sua_sendgrid_api_key_aqui
FROM_EMAIL=noreply@monetasis.com

# Uploads (opcional)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=sua_session_secret_aqui
